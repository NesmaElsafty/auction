			"item": [
				{
					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    try {",
									"        var jsonData = pm.response.json();",
									"        var token = null;",
									"        var user = null;",
									"        ",
									"        // Try nested structure (data.token)",
									"        if (jsonData.data && jsonData.data.token) {",
									"            token = jsonData.data.token;",
									"            user = jsonData.data.user;",
									"        }",
									"        // Try root structure (token)",
									"        else if (jsonData.token) {",
									"            token = jsonData.token;",
									"            user = jsonData.user;",
									"        }",
									"        ",
									"        if (token) {",
									"            pm.environment.set(\"admin_token\", token);",
									"            pm.environment.set(\"auth_token\", token);",
									"            if (user && user.id) {",
									"                pm.environment.set(\"user_id\", user.id);",
									"            }",
									"        }",
									"    } catch (e) {",
									"        console.log(\"Error parsing response:\", e);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"John Doe\",\n    \"national_id\": \"1234567890\",\n    \"email\": \"john.doe@example.com\",\n    \"phone\": \"+1234567890\",\n    \"address\": \"123 Main Street, City, Country\",\n    \"summary\": \"This is a test user account\",\n    \"link\": \"https://example.com/johndoe\",\n    \"password\": \"password123\",\n    \"type\": \"user\"\n}",
							"options": {
